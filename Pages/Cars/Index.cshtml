@page
@model CarsApp.Pages.Cars.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Nasze samochody";
}

<h1>Nasze samochody</h1>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Marka</th>
                <th>Model</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Cars != null)
            {
            foreach (var car in Model.Cars)
            {
            <tr>
                <td> @car.Brand </td>
                <td> @car.Model </td>
                <td>
                    <a asp-page="./Reserve" asp-route-id="@car.Id">Rezerwuj</a>
                </td>
            </tr>
            }
            }
        </tbody>
    </table>
</form>
